.container-fluid
  - if @activity_stats_map.present? || @friends_stats_map.present?
    - if @activity_stats_map.present?
      %br
      %br
      %h3 Facebook Analysis
      %table.table.table-striped
        %tr
          %td
            %h4 Activity
          %td
            %h4 Post statistics
        %tr
          %td{width: '39%'}
            %table.inner
              %tr
                %td{width: '35%'}
                  %label Type
                %td{width: '20%'}
                  %label Count
                %td{rowspan: 4, style:'vertical-align: middle;'}
                  #chart1
                  = render_chart @activity_graph, 'chart1'
              %tr
                %td
                  %label Uploaded photos
                %td
                  #{@activity_stats_map[:total_photos]}
              %tr
                %td
                  %label Statuses
                %td
                  #{@activity_stats_map[:total_statuses]}
              %tr
                %td
                  %label Posted links
                %td
                  #{@activity_stats_map[:total_links]}
          %td{width: '53%'}
            %table.inner
              %tr
                %td
                  %label Analyzed posts
                %td
                  #{@activity_stats_map[:total_posts]}
              %tr
                %td
                  %label Total likes
                %td
                  #{@activity_stats_map[:total_likes]}
              %tr
                %td
                  %label Total comments
                %td
                  #{@activity_stats_map[:total_comments]}
              %tr
                %td
                  %label Average post length
                %td
                  #{@activity_stats_map[:avg_char_length]} characters
      .page-break
      %table.table.table-striped
        %tr
          %td
            #chart2
            = render_chart @top_countries_graph, 'chart2'
          %td
          %td
            #chart3
            = render_chart @top_states_graph, 'chart3'
      .cl
    - else
      %table.table.table-striped
        %tr
          %td{colspan: 3, rowspan:3} Please connect to Facebook
    - if @friends_stats_map.present?
      %table.table.table-striped
        %tr
          %td
            #chart4
            = render_chart @friends_gender_graph, 'chart4'
          %td
            #chart5
            = render_chart @friends_status_graph, 'chart5'
          %td
            #chart6
            = render_chart @friends_age_graph, 'chart6'
    - else
      %table.table.table-striped
        %tr
          %td{colspan: 3} Please connect to Facebook